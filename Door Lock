//RFID, Door Lock, Hello World #include <SPI.h>
#include <MFRC522.h>

#include <Servo.h>

#include <LiquidCrystal.h>

#define SS_PIN 53
#define RST_PIN 5
#define LED_G 3 //define green LED pin
#define LED_R 2 //define red LED
#define BUZZER 6 //buzzer pin
MFRC522 mfrc522(SS_PIN, RST_PIN); // Create MFRC522 instance. Servo myServo; //define servo name
//Initialize the library with the numbers of the interface pins LiquidCrystal lcd(7, 8, 9, 10, 11, 12);
void setup() {
    Serial.begin(9600); // Initiate a serial communication SPI.begin(); // Initiate SPI bus mfrc522.PCD_Init(); // Initiate MFRC522 myServo.attach(4); //servo pin
    myServo.write(180); //servo start position pinMode(LED_G, OUTPUT);
    pinMode(LED_R, OUTPUT);
    pinMode(BUZZER, OUTPUT);
    noTone(BUZZER);
    //Set up the LCD's number of columns and rows:
    lcd.begin(16, 2);
    //Print a message to the LCD.
    lcd.print("Money Talks!");
    lcd.setCursor(0, 1);
    lcd.print("BS Walks!");
}
void loop() {
    {
        return;
    }
    // Select one of the cards
    if (!mfrc522.PICC_ReadCardSerial()) {
        return;
    }
    //Show UID on serial monitor
    String content = "";
    byte letter;
    for (byte i = 0; i < mfrc522.uid.size; i++) {
        Serial.print(mfrc522.uid.uidByte[i] < 0x10 ? " 0" : " ");
        Serial.print(mfrc522.uid.uidByte[i], HEX);
        content.concat(String(mfrc522.uid.uidByte[i] < 0x10 ? " 0" : " "));
        content.concat(String(mfrc522.uid.uidByte[i], HEX));
    }
    content.toUpperCase();
    if (content.substring(1) == "29 28 4C D3") //change here the UID of the card/cards that you want to give access
    {
        delay(500);
        digitalWrite(LED_G, HIGH);
        tone(BUZZER, 500);
        delay(500);
        noTone(BUZZER);
        myServo.write(0);
        delay(8000);
        myServo.write(180);
        digitalWrite(LED_G, LOW);
    } else {
        80
        digitalWrite(LED_R, HIGH);
        tone(BUZZER, 300);
        delay(1000);
        digitalWrite(LED_R, LOW);
        noTone(BUZZER);
    }
}
